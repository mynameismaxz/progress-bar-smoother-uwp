<Page
    x:Class="ProgressBarSmoother.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ProgressBarSmoother"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <ProgressBar x:Name="progressBar" HorizontalAlignment="Stretch" Height="22" Margin="0,0,0,0" VerticalAlignment="Center" />
        <Button x:Name="startTimer" Content="Start" Background="AliceBlue" Click="startTimer_Click" HorizontalAlignment="Center" Height="58" VerticalAlignment="Top" Width="114" Margin="0,10,0,0" />
    </Grid>
</Page>
